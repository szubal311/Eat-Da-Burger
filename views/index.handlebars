<div class="row">
    <div class="col-md-6 mb-6">
        <h1>Menu</h1>
        <ol>
            {{#each burgers}}
            {{#unless devoured}}
            <li>
                {{burger_name}} <button class="changeDevour btn-sm bg-dark text-white" data-id="{{id}}" data-newDevour="{{devoured}}" type="submit">Devour</button>
            </li>
            {{/unless}}
            {{/each}}
        </ol>
    </div>
    <div class="col-md-6 mb-6">
        <h1>All Gone!</h1>
        <ol>
            {{#each burgers}}
            {{#if devoured}}
            <li>
                {{burger_name}}
            </li>            
            {{/if}}
            {{/each}}
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <form id="create-form">
            <div class="form-group">
                <label for="hambr">Add a new Buger</label>
                <input type="text" class="form-control" name="" id="hambr" aria-describedby="helpId" placeholder="What's the Name of your burger">
            </div>
            <button type="submit" class="bg-secondary text-white">Let's add the burger!</button>
        </form>
    </div>
</div>